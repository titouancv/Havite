datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Source {
  id        String   @id @default(uuid())
  url       String

  recaps    Recap[] @relation("RecapSources")

  media     Media   @relation(fields: [mediaId], references: [id])
  mediaId   String
}

model Recap {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())

  sources   Source[] @relation("RecapSources")
}

model Media {
  id        String   @id @default(uuid())
  url       String

  sources   Source[]
}
